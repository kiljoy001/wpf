<Window x:Class="wpf.addProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf"
        mc:Ignorable="d"
        Title="Invo" Height="350" Width="525">
    <Grid Background="LightBlue">
        <GroupBox x:Name="groupBox" Header="Add Product" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="299" Width="497">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="138,62,147,47" Width="200" Height="168">
                <Label x:Name="labelPName" Content="Product Name" />
                <TextBox x:Name="pName" />
                <Label x:Name="labelPAmount" Content="Amount" />
                <TextBox x:Name="pAmount" />
                <Label x:Name="labelPPrice" Content="Wholesale Price" />
                <TextBox x:Name="pPrice" />
                <Button x:Name="pSubmit" Content="Save Product" HorizontalAlignment="Right" Foreground="white" Background="orange" Margin="0,10"/>


            </StackPanel>
        </GroupBox>


    </Grid>
</Window>
