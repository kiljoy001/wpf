<Window x:Class="wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Invo" Height="350" Width="525">
    <Grid Background="#2B3E50" RenderTransformOrigin="0.351,0.571">
        <!-- <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  > -->
        <TextBox x:Name="login"  MaxLength="60" Margin="334,173,22,122" RenderTransformOrigin="0.505,0.543" TextChanged="login_TextChanged"/>
        <Label Foreground="White" Margin="259,173,188,122">Password</Label>
        <Label Foreground="White" Content="Login" Margin="10,173,456,122"/>
        <PasswordBox x:Name="password" MaxLength="60" Margin="61,173,298,122"  />

        <Button HorizontalAlignment="Right" Background="#FFDF691A" Foreground="White" Content="Sign In" Margin="0,246,22,47" Width="126" Click="Button_Click" />
        <Label Content="INVO" HorizontalAlignment="Left" Margin="205,22,0,0" VerticalAlignment="Top" Foreground="#FFDF691A" FontSize="48"/>
        <!-- </StackPanel> -->
    </Grid>
</Window>
