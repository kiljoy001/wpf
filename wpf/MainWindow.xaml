<Window x:Class="wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Invo" Height="350" Width="525">
    <Grid Background="LightBlue">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"  >
            <Label>Login</Label>
            <TextBox x:Name="login"  MaxLength="60"/>
            <Label>Password</Label>
            <PasswordBox x:Name="password" Width="152" MaxLength="60"  />

            <Button HorizontalAlignment="Right" Background="Orange" Foreground="White" Content="Sign In" Margin="5" Width="51" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
